<script>
    $(document).ready(function () {
        let swiper = new Swiper(".new-Swiper3", {
            slidesPerView: 1.2,
            spaceBetween: 24,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                767: {
                    slidesPerView: 2.5,
                    spaceBetween: 24,
                },
                998: {
                    slidesPerView: 3.5,
                    spaceBetween: 24,
                }
            }
        });
    })
</script>
