<style>
    #new-slider-{{ section.id }} {
        max-width: {{ section.settings.max_width | append: 'px'  }};
        margin: {{ section.settings.margin_top | append: 'px'  }} auto{{ section.settings.margin_bottom | append: 'px'  }};
        color: {{ section.settings.bg_color }};
        padding-top: {{ section.settings.padding_top | append: 'px'  }};
        padding-bottom: {{ section.settings.padding_bottom | append: 'px'  }};

    }

    #new-slider-{{ section.id }} > div {
        position: relative;
    }

    #new-slider-{{ section.id }} h2.new-slider-header {
        position: absolute;
        font-size: {{ section.settings.title_size | append: 'px' }};
        font-weight: {{ section.settings.title_font_weight }};
        line-height: {{ section.settings.title_line_height | append: 'px'  }};
        letter-spacing: {{ section.settings.title_letter_spacing | append: 'px' }};
        color: {{ section.settings.title_color }};
        top: 30px;
        left: calc((100vw - 1220px) / 2);
        transform: translateY(-50%);
        z-index: 5
    }

    #new-slider-{{ section.id }} h2.new-slider-header .new-blog-all::before {
        content: "";
        display: inline-block;
        height: 16px;
        border-left: 1px solid #ddd;
        margin: 0 20px;
    }

    #new-slider-{{ section.id }} h2.new-slider-header .new-blog-all a {
        font-size: 16px;
        line-height: 24px;
        font-weight: 400;
        color: #19A64F;
    }

    #new-slider-{{ section.id }} .new-Swiper3 {
        padding-top: 70px;
        padding-left: calc((100vw - 1700px) / 2);
        padding-right: calc((100vw - 1700px) / 2);
    }

    #new-slider-{{ section.id }} .new-slider-box {
        position: relative;
        border-radius: 20px;
        overflow: hidden;
    }

    #new-slider-{{ section.id }} .new-slider-textbox {
        position: absolute;
        bottom: 0;
        left: 0;
        height: max-content;
        background: linear-gradient(rgba(95, 206, 139, 1) 70%, rgba(95, 206, 139, .7), rgba(95, 206, 139, 0));
    }

    #new-slider-{{ section.id }} .new-slider-box img {
        width: 100%;
        display: block;
        margin: 0;
        padding: 0;
        border: none;
    }

    #new-slider-{{ section.id }} .new-slider-textbox {
        padding: 30px;
    }

    #new-slider-{{ section.id }} .new-slider-textbox > * {
        margin: 0;
    }

    #new-slider-{{ section.id }} .right-top {
        top: 0;
        right: 0;
        text-align: right;
      width:100%;
    }

    #new-slider-{{ section.id }} .left-top {
        top: 0;
        left: 0;
        text-align: left;
        width:100%;
    }

    #new-slider-{{ section.id }} .right-bottom {
        bottom: 0;
        right: 0;
        text-align: right;
      width:100%;
    }

    #new-slider-{{ section.id }} .text-center {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
      width:100%;
    }

    #new-slider-{{ section.id }} .left-bottom {
        bottom: 0;
        left: 0;
        text-align: left;
      width:100%;
    }

    #new-slider-{{ section.id }} .swiper-button-next, #new-slider-{{ section.id }} .swiper-button-prev {
        width: 40px;
        height: 40px;
        top: 30px;
        right: calc((100vw - 1220px) / 2);
    }

    #new-slider-{{ section.id }} .swiper-button-prev {
        left: auto;
        right: calc(((100vw - 1220px) / 2) + 50px);
    }

    #new-slider-{{ section.id }} .new-slider-list > * {
    {% comment %} transform: translateX(calc(( 100vw - 1220px ) / 2)); {% endcomment %}
    }

    @media (max-width: 1220px) {
        #new-slider-{{ section.id }} .swiper-button-next, #new-slider-{{ section.id }} .swiper-button-prev {
            right: 40px;
        }

        #new-slider-{{ section.id }} .swiper-button-prev {
            left: auto;
            right: calc(40px + 50px);
        }

        #new-slider-{{ section.id }} h2.new-slider-header {
            left: 40px;
        }

        #new-slider-{{ section.id }} .new-Swiper3 {
            padding-left: 40px;
            padding-right: 40px;
        }
    }

    @media (max-width: 767px) {
        #new-slider-{{ section.id }} {
            margin: {{ section.settings.margin_top_mo | append: 'px'  }} auto{{ section.settings.margin_bottom_mo | append: 'px'  }};
            padding-top: {{ section.settings.padding_top_mo | append: 'px'  }};
            padding-bottom: {{ section.settings.padding_bottom_mo | append: 'px'  }};
        }

        #new-slider-{{ section.id }} h2.new-slider-header {
            font-size: {{ section.settings.title_size_mo | append: 'px' }};
            font-weight: {{ section.settings.title_font_weight_mo }};
            line-height: {{ section.settings.title_line_height_mo | append: 'px'  }};
            letter-spacing: {{ section.settings.title_letter_spacing_mo | append: 'px' }};
        }

        #new-slider-{{ section.id }} .new-slider-box {
            border-radius: 12px;
        }

        #new-slider-{{ section.id }} .swiper-button-next, #new-slider-{{ section.id }} .swiper-button-prev {
            right: 20px;
        }

        #new-slider-{{ section.id }} .swiper-button-prev {
            left: auto;
            right: calc(20px + 50px);
        }

        #new-slider-{{ section.id }} h2.new-slider-header {
            left: 20px;
        }

        #new-slider-{{ section.id }} h2.new-slider-header .new-blog-all::before {
            margin: 0 12px;
        }

        #new-slider-{{ section.id }} .new-Swiper3 {
            padding-left: 20px;
            padding-right: 20px;
        }
    }
</style>
<div class="new-slider" id="new-slider-{{ section.id }}">
  <div class="">
    {% if section.settings.title != blank %}
      <div class="new-silder-top">
        <h2 class="new-slider-header">{{ section.settings.title }} {% if section.settings.blog_all != blank %}
            <span class="new-blog-all"><a href="{{ section.settings.blog_all_url }}">{{ section.settings.blog_all }}</a></span>
          {% endif %}</h2>
      </div>
    {% endif %}
    <div class="swiper new-Swiper3">
      <div class="new-slider-list swiper-wrapper">
        {% if section.settings.blog != blank %}
          {% for article in section.settings.blog.articles limit: section.settings.post_limit %}
            <div class="new-slider-box swiper-slide">
              <a href="{{ article.url }}">
                <div class="new-slider-textbox {{ section.settings.text_align }}">
                  <p class="new-slider-subheading"> {{ article.published_at | time_tag: format: 'month_day_year' }} </p>
                  <h3 class="new-slider-header">{{ article.title }}</h3>
                </div>
                <img loading="lazy" src="{{ article.image | img_url: 'master' }}" alt="{{ article.title }}">
              </a>
            </div>
          
          {% endfor %}
        {% endif %}
      </div>
      <div class="swiper-button-prev">
        <svg width="43" height="43" viewBox="0 0 43 43" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="21.5" cy="21.5" r="20.5" fill="white" stroke="#DDDDDD"/>
          <path d="M23.7588 16L18.5172 21.2416L23.7588 26.4832" stroke="#666666" stroke-width="1.5"/>
        </svg>
      </div>
      <div class="swiper-button-next">
        <svg width="43" height="43" viewBox="0 0 43 43" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="21.5" cy="21.5" r="20.5" transform="rotate(-180 21.5 21.5)" fill="white" stroke="#DDDDDD"/>
          <path d="M19.2412 27L24.4828 21.7584L19.2412 16.5168" stroke="#666666" stroke-width="1.5"/>
        </svg>
      </div>
    </div>
  
  </div>
</div>

