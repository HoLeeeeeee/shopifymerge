<div class="reward-nav-wrapper">
  {% for block in section.blocks %}
    {% if block.type == 'tab_block' %}
      <div class="reward-nav-item font16 {% if forloop.first %}active{% endif %}" data-goto="{{block.settings.class}}">
        {{ block.settings.title }}
      </div>
    {% elsif block.type == 'button_block' %}
    <div class="reward-nav-item">
      <a class="reward-nav-btn" href="{{ block.settings.link }}">{{ block.settings.btn }}</a>
    </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Reward nav",
  "class": "reward-nav-div",
  "settings": [],
  "blocks": [
    {
      "type": "tab_block",
      "name": "tab_block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "class",
          "label": "Classname"
        }
      ]
    },
    {
      "type": "button_block",
      "name": "button_block",
      "settings": [
        {
          "type": "text",
          "id": "btn",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reward nav"
    }
  ]
}
{% endschema %}
