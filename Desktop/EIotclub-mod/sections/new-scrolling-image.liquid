<style>
/* 重要样式：让图片显示在同一行上 */
.slider-wrapper {
  display: flex;
  flex-wrap: nowrap;
  height: 100%;
  width: 300%;
  animation: scrolling-image 20s linear infinite;
}
/* 走马灯容器样式 */
.slider {
  width: 100%;
  height:50px; /* 根据实际情况设置高度 */
  overflow: hidden;
  background: #ddd;
}

/* 图片样式 */
.slider .image-list {
  display: flex;
  width: 16%;
  height: 100%;
  justify-content: space-evenly;
  {% comment %} padding: 15px 0; {% endcomment %}
 
}
.slider .image-list img {
  height: 100%; /* 根据实际情况设置高度 */
}
@media(max-width:767px){
    .slider-wrapper {
      width: 850%;    
    }
    .slider .image-list {
      width:16%;
      {% comment %} padding: 15px 0; {% endcomment %}
    }
}
@keyframes scrolling-image{
  0%{
    transform:translateX(0);
    -webkit-transform:translateX(0);
  }
  to{
    transform:translateX(-50%);
    -webkit-transform:translateX(-50%);
  }
}
</style>
