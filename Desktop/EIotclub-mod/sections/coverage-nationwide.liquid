{{ 'section-coverage-nationwide.css' | asset_url | stylesheet_tag }}
{% liquid
  assign secid = section.id | split: '__'
  assign secidlast = secid[1] | replace: '-', '_'
%}
<div class="contain-index">
  <div class="coverage-nationwide-outbox">
    {% if section.settings.title != blank %}
      <div class="coverage-nationwide-title animate-ele common-title">{{ section.settings.title }}</div>
    {% endif %}
    {% if section.settings.content != blank %}
      <div class="coverage-nationwide-tcontent animate-ele">{{ section.settings.content }}</div>
    {% endif %}
    {% if section.settings.image %}
      <div class="coverage-nationwide-img">
        <img
          class="{% if section.settings.imagemb  %}hide-mb{% endif %}"
          src="{{ section.settings.image | img_url:'master' }}"
          alt=""
        >
      </div> 
    {% endif %}
    {% if section.settings.imagemb %}
      <div class="coverage-nationwide-img">
        <img class="hide-pc" src="{{ section.settings.imagemb | img_url:'master' }}" alt="">
      </div>
    {% endif %}

    <div class="coverage-nationwide_elebox animate-ele">
      {% for block in section.blocks %}
        <div class="coverage-nationwide_item">
          <div class="coverage-nationwide-itemtext">
            {% if block.settings.title != blank %}
              <div class="coverage-nationwide-itemtitle">{{ block.settings.title }}</div>
            {% endif %}
            {% if block.settings.content != blank %}
              <div class="coverage-nationwide-itemcon">{{ block.settings.content }}</div>
            {% endif %}
            {% if block.settings.url != blank %}
              <a
                class="coverage-nationwide-btn coverage-nationwide-btn{{ forloop.index }} bthho"
                href="{{ block.settings.url }}"
              >
                <span>{{- block.settings.link_text -}}</span>
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Coverage Nationwide",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "image"
    },
    {
      "type": "image_picker",
      "id": "imagemb",
      "label": "image(mobile)"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "content"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Text Url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Coverage Nationwide",
      "category": "HO-layout"
    }
  ]
}
{% endschema %}
