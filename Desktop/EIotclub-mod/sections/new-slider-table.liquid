<!-- sections\new-slider-table.liquid -->
<style>
  @media (max-width: 787px) {
      .new-table-pc {
          display: none;
      }
  }

  @media (min-width: 787px) {
      .new-table-mobile {
          display: none;
      }
  }

  .new-slide-frame {
      overflow-x: auto;
  }

  .new-slide-frame .new-font-weight {
      font-weight: 600;
  }

  .new-slide-frame th,
  .new-slide-frame td {
      width: 25%;
      text-align: center;
      padding: 18px;
      border-bottom: 1px solid #ddd;
  }

  .new-slide-frame th img {
      width: 30%;
      margin: 0px auto 18px;
  }

  .new-slide-frame th a {
      display: inline-block;
      min-width: 120px;
      padding: 5px 20px;
      border-radius: 30px;
      background-color: {{ section.settings.button_background_color }};
      color: #fff;
  }

  .new-slide-frame .new-table-pc {
      background: transparent;
  }

  .new-slide-frame .new-table-mobile {
      border-collapse: separate;
      border-spacing: 10px 0;
      background: transparent;
      width: 150%;
  }

  .new-slide-frame .new-table-mobile th,
  .new-slide-frame .new-table-mobile td {
      border: 1px solid #ddd;
      border-bottom: none;
      width: 33%;
  }

  .new-slide-frame .new-table-mobile tr:last-child td {
      border-bottom: 1px solid #ddd;
  }

  .new-slide-frame .new-table-mobile th img {
      display: block;
      width: 50%;
  }

  #new-slide-{{ section.id }} .halo-block-headers .title{
    font-size: {{ section.settings.heading_size |  append: 'px' }};
    line-height: 1.2em;
    color: {{ section.settings.heading_color }};
    margin-bottom:{{ section.settings.heading_margin_bottom |  append: 'px' }};
  }
  @media (max-width: 767px) {
  #new-slide-{{ section.id }} .halo-block-headers .title{
    font-size: {{ section.settings.heading_size_mobile |  append: 'px' }};
    color: {{ section.settings.heading_color_mobile }};
    margin-bottom: {{ section.settings.heading_margin_bottom_mobile |  append: 'px' }};
  }
  }
</style>
<div
  class="new-slider-table"
  id="new-slide-{{ section.id }}"
  {% if section.blocks.size > 1 %}
    data-loader-script="{{ 'new-slider-table.js' | asset_url }}"
  {% endif %}
>
  <div
    class="page-width {% if section.settings.container == 'fullwidth' %}container-full{% elsif section.settings.container == '1770' %}container-1770{% elsif section.settings.container == '1170' %}container-1170{% else %}container{% endif %}"
  >
    {% if section.settings.title != blank %}
      <div class="halo-block-headers text-{{ section.settings.title_align }}">
        {% if section.settings.title != blank %}
          <h3 class="title text-center">
            <span class="text">
              {{ section.settings.title }}
            </span>
          </h3>
        {% endif %}
      </div>
    {% endif %}
    <div class="new-slide-container">
      <div class="new-slide-frame">
        <table class="new-table-pc">
          <thead>
            {% for block in section.blocks %}
              {%- case block.type -%}
                {% when 'table_thead' %}
                  <tr>
                    <th>{{ block.settings.thead_text }}</th>

                    {% if block.settings.image1 != blank %}
                      <th>
                        <img src="{{ block.settings.image1 | img_url: 'large' }}" alt="">
                        {% if block.settings.button1 != blank %}
                          <div>
                            <a href="{{ block.settings.button_link1 }}">{{ block.settings.button1 }}</a>
                          </div>
                        {% endif %}
                      </th>
                    {% endif %}

                    {% if block.settings.image2 != blank %}
                      <th>
                        <img src="{{ block.settings.image2 | img_url: 'large' }}" alt="">

                        {% if block.settings.button2 != blank %}
                          <div>
                            <a href="{{ block.settings.button_link2 }}">{{ block.settings.button2 }}</a>
                          </div>
                        {% endif %}
                      </th>
                    {% endif %}
                    {% if block.settings.image3 != blank %}
                      <th>
                        <img src="{{ block.settings.image3 | img_url: 'large' }}" alt="">
                        {% if block.settings.button3 != blank %}
                          <div>
                            <a href="{{ block.settings.button_link3 }}">{{ block.settings.button3 }}</a>
                          </div>
                        {% endif %}
                      </th>
                    {% endif %}
                  </tr>
              {% endcase %}
            {% endfor %}
          </thead>
          <tbody>
            {% for block in section.blocks %}
              {%- case block.type -%}
                {% when 'table_tbody' %}
                  <tr style="background-color: {{ block.settings.bg_color }};">
                    {% if block.settings.tbody_text1 != blank %}
                      <td class="new-font-weight">{{ block.settings.tbody_text1 }}</td>
                    {% endif %}
                    {% if block.settings.tbody_text2 != blank %}
                      <td>{{ block.settings.tbody_text2 }}</td>
                    {% endif %}
                    {% if block.settings.tbody_text3 != blank %}
                      <td>{{ block.settings.tbody_text3 }}</td>
                    {% endif %}
                    {% if block.settings.tbody_text4 != blank %}
                      <td>{{ block.settings.tbody_text4 }}</td>
                    {% endif %}
                  </tr>
              {% endcase %}
            {% endfor %}
          </tbody>
        </table>
        <table class="new-table-mobile">
          <thead>
            {% for block in section.blocks %}
              {%- case block.type -%}
                {% when 'table_thead' %}
                  <tr>
                    {% if block.settings.image1 != blank %}
                      <th>
                        <img src="{{ block.settings.image1 | img_url: 'large' }}" alt="">
                        {% if block.settings.button1 != blank %}
                          <a href="{{ block.settings.button_link1 }}">{{ block.settings.button1 }}</a>
                        {% endif %}
                      </th>
                    {% endif %}
                    {% if block.settings.image2 != blank %}
                      <th>
                        <img src="{{ block.settings.image2 | img_url: 'large' }}" alt="">

                        {% if block.settings.button2 != blank %}
                          <a href="{{ block.settings.button_link2 }}">{{ block.settings.button2 }}</a>
                        {% endif %}
                      </th>
                    {% endif %}

                    {% if block.settings.image3 != blank %}
                      <th>
                        <img src="{{ block.settings.image3 | img_url: 'large' }}" alt="">

                        {% if block.settings.button3 != blank %}
                          <a href="{{ block.settings.button_link3 }}">{{ block.settings.button3 }}</a>
                        {% endif %}
                      </th>
                    {% endif %}
                  </tr>
              {% endcase %}
            {% endfor %}
          </thead>
          <tbody>
            {% for block in section.blocks %}
              {%- case block.type -%}
                {% when 'table_tbody' %}
                  <tr style="background-color: {{ block.settings.bg_color }};">
                    {% if block.settings.tbody_text2 != blank %}
                      <td>
                        <div
                          class="new-font-weight"
                        >
                          {{ block.settings.tbody_text1 }}
                        </div>
                        {{ block.settings.tbody_text2 }}
                      </td>
                    {% endif %}
                    {% if block.settings.tbody_text3 != blank %}
                      <td>
                        <div
                          class="new-font-weight"
                        >
                          {{ block.settings.tbody_text1 }}
                        </div>
                        {{ block.settings.tbody_text3 }}
                      </td>
                    {% endif %}
                    {% if block.settings.tbody_text4 != blank %}
                      <td>
                        <div
                          class="new-font-weight"
                        >
                          {{ block.settings.tbody_text1 }}
                        </div>
                        {{ block.settings.tbody_text4 }}
                      </td>
                    {% endif %}
                  </tr>
              {% endcase %}
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script></script>
{%- liquid
  assign mg_top_desktop = section.settings.mg_top_desktop
  assign mg_top_tablet = section.settings.mg_top_tablet
  assign mg_top_mobile = section.settings.mg_top_mobile

  assign mg_bottom_desktop = section.settings.margin_bottom
  assign mg_bottom_tablet = section.settings.margin_bottom_tab
  assign mg_bottom_mobile = section.settings.margin_bottom_mb

  assign color_bg = section.settings.bg_color
-%}

<style>
  #new-slide-{{ section.id }} {
      background-color: {{ color_bg }};
  }

  @media (max-width: 767px) {
      #new-slide-{{ section.id }} {
          padding-top: {{ mg_top_mobile | append: 'px' }};
          padding-bottom: {{ mg_bottom_mobile | append: 'px' }};
      }

  }

  @media (min-width: 1200px) {
      #new-slide-{{ section.id }} {
          padding-top: {{ mg_top_desktop | append: 'px' }};
          padding-bottom: {{ mg_bottom_desktop | append: 'px' }};
      }
  }


  @media (min-width: 768px) and (max-width: 1199px) {
      #new-slide-{{ section.id }} {
          padding-top: {{ mg_top_tablet | append: 'px' }};
          padding-bottom: {{ mg_bottom_tablet | append: 'px' }};
      }
  }

  #new-banner-content-{{ section.id }} .halo-block-header .title:before {
      background-color: {{ color_title }};
  {% unless section.settings.enable_border_title %} display: none;
  {% endunless %}
  }

  #new-banner-content-{{ section.id }} .halo-block-header .title {
      color: {{ section.settings.color_title }};
      font-size: {{ section.settings.fontsize_title | append: 'px' }};
      margin-bottom: {{ section.settings.margin_bottom_title | append: 'px' }};

  }

  #new-banner-content-{{ section.id }} .halo-block-header .title.text-left {
      text-align: left;
  }

  #new-banner-content-{{ section.id }} .halo-block-header .title.text-center {
      text-align: center;
  }

  #new-banner-content-{{ section.id }} .halo-block-header .title.text-right {
      text-align: right;
  }

  @media (max-width: 767px) {
      #new-banner-content-{{ section.id }} .halo-block-header .title {
          font-size: {{ section.settings.fontsize_title_mb | append: 'px' }};
          margin-bottom: {{ section.settings.margin_bottom_title_mo | append: 'px' }};
      }
  }
</style>

{% schema %}
{
  "name": "new-slider-table",
  "class": "new-slider-table-section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout:",
