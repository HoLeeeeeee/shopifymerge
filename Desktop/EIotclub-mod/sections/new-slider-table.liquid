          "type": "image_picker",
          "id": "image3",
          "label": "Select Image3"
        },
        {
          "type": "text",
          "id": "button3",
          "label": "button text3"
        },
        {
          "type": "url",
          "id": "button_link3",
          "label": "button link3"
        }
      ]
    },
    {
      "type": "table_tbody",
      "name": "table tbody",
      "settings": [
        {
          "type": "color",
          "id": "bg_color",
