<!-- sections\new-text-and-image.liquid -->
{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}

{%- liquid
  assign image_width = section.settings.image_width
  assign overlap_images = true
  if section.settings.image == blank or section.settings.image2 == blank
    assign overlap_images = false
  endif

  if section.settings.image == blank and section.settings.image2 == blank
    assign overlap_images = true
    assign placeholder_images = true
  endif
-%}

{% style %}
  {% if section.settings.top_padding == false %}
    .index-section { margin-top: 0 !important; }
  {% endif %}
  {% if section.settings.bottom_padding == false %}
    .index-section { margin-bottom: 0 !important; }
  {% endif %}
  .section-header h2{
    text-align:center;
  }
{% endstyle %}
<style>
  #new-{{ section.id }} .new-box{
      display: flex;
      align-items: center;
  }
  #new-{{ section.id }} .new-image{
      width: 64px;
      height: 62px;
      border-radius:60px;
      overflow: hidden;
  }
  #new-{{ section.id }} .feature-row__images{
    border-radius: 0;
  }
  #new-{{ section.id }} .new-text{
      width: 80%;
      padding-left: 20px;
  }
  #new-{{ section.id }} .feature-row{
    border-radius: 20px;
    overflow: hidden;
    background-color:{{ section.settings.bg_color }};
  }
  #new-{{ section.id }} .feature-row__text--right{
      padding:40px 40px 40px 80px;
  }

  #new-{{ section.id }} .h1{
    margin-bottom: 40px;
    font-size: 32px;
    line-height: 48px;
    }
    #new-{{ section.id }} h3{
      margin-bottom: 12px;
      font-size: 18px;
      line-height: 27px;
    }
    #new-{{ section.id }} p{
      font-size: 16px;
      line-height: 24px;
    }
    #new-{{ section.id }} .btn{
      margin: 40px 0 0 84px;
    }
    #new-{{ section.id }} .image-pc{
      display: block;
    }
    #new-{{ section.id }} .image-mo{
      display: none;
    }
  @media (max-width:767px){
      #new-{{ section.id }} .feature-row__text--right{
      padding: 20px 30px 30px;
      display: flex;
      flex-direction: column;
      align-items: center;
  }
  #new-{{ section.id }} .feature-row__text--right>h2{
    margin-bottom: 20px;
    font-size: 20px;
    line-height: 30px;
    text-align: center;
  }
  #new-{{ section.id }} .page-width{
    padding: 0;
  }
  #new-{{ section.id }} h3{
      font-size: 16px;
      line-height: 24px;
    }
  #new-{{ section.id }} .new-text p{
      font-size: 12px;
      line-height: 22px;
  }
  #new-{{ section.id }} .btn{
    margin: 20px 0 0 0px;
  }
  #new-{{ section.id }} .feature-row{
    border-radius: 0;
    flex-direction: column-reverse;
    }
    #new-{{ section.id }} .image-pc{
      display: none;
    }
    #new-{{ section.id }} .image-mo{
      display: block;
    }
  }
</style>
<div class="index-section" id="new-{{ section.id }}">
  <div class="page-width feature-row-wrapper feature-row--{{ image_width }}">
    {%- capture image_layout -%}
      <div class="feature-row__item feature-row__images{% if overlap_images %} feature-row__item--overlap-images{% endif %} {% if placeholder_images %}feature-row__item--placeholder-images{% endif %}" data-aos>
          {%- if section.settings.image != blank -%}
            <div class="feature-row__first-image image-pc">
              {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}<a href="{{ section.settings.button_link }}">{%- endif -%}
                <div class="image-wrap {% if section.settings.image_mask != 'none' %}svg-mask svg-mask--{{ section.settings.image_mask }}{% endif %}" style="height: 0; padding-bottom: {{ 100 | divided_by: section.settings.image.aspect_ratio | plus: 5    }}%;">
                  {%- liquid
                    if section.settings.image2 == blank
                      assign sizeVariable = section.settings.image_width | append: 'vw'
                      assign fallback = '100vw'
                    else
                      assign sizeVariable = 'calc(0.4 * 50vw)'
                      assign fallback = '40vw'
                    endif

                    assign imageWidth = section.settings.image_width | times: 1
                    if imageWidth >= 50
                      assign loading = section.settings.lazyload_images
                    else
                      assign loading = true
                    endif
                  -%}
                  {%- render 'image-element',
                    img: section.settings.image,
                    widths: '180, 360, 540, 750, 900, 1080',
                    loading: loading,
                    sizeVariable: sizeVariable,
                    fallback: fallback,
                    classes: 'feature-row__image',
                  -%}
                </div>
              {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}</a>{%- endif -%}
            </div>
          {%- endif -%}
          {%- if section.settings.image2 != blank -%}
            <div class="feature-row__second-image image-pc">
              {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}<a href="{{ section.settings.button_link }}">{%- endif -%}
                <div class="image-wrap {% if section.settings.image2_mask != 'none' %}svg-mask svg-mask--{{ section.settings.image2_mask }}{% endif %}" style="height: 0; padding-bottom: {{ 100 | divided_by: section.settings.image2.aspect_ratio }}%;">
                  {%- liquid
                    if section.settings.image == blank
                      assign sizeVariable = section.settings.image_width | append: 'vw'
                      assign fallback = '100vw'
                    else
                      assign sizeVariable = 'calc(0.6 * 50vw)'
                      assign fallback = '60vw'
                    endif
                  -%}
                  {%- render 'image-element',
                    img: section.settings.image2,
                    widths: '180, 360, 540, 750, 900, 1080',
                    sizeVariable: sizeVariable,
                    fallback: fallback,
                    classes: 'feature-row__image',
                  -%}
                </div>
              {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}</a>{%- endif -%}
            </div>
          {%- endif -%}
          {%- if section.settings.image == blank and section.settings.image2 == blank -%}
            <div class="placeholder-image-wrap image-pc">
              <div class="image-wrap">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            </div>
            <div class="placeholder-image-wrap image-pc">
              <div class="image-wrap">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            </div>
          {%- endif -%}
          {% if section.settings.image_mo != blank %}
            <div class="feature-row__first-image image-mo">
          {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}<a href="{{ section.settings.button_link }}">{%- endif -%}
            <div class="image-wrap {% if section.settings.image_mask_mo != 'none' %}svg-mask svg-mask--{{ section.settings.image_mask_mo }}{% endif %}" style="height: 0; padding-bottom: {{ 100 | divided_by: section.settings.image.aspect_ratio | plus: 5    }}%;">
              {%- liquid
                if section.settings.image2 == blank
                  assign sizeVariable = section.settings.image_width | append: 'vw'
                  assign fallback = '100vw'
                else
                  assign sizeVariable = 'calc(0.4 * 50vw)'
                  assign fallback = '40vw'
                endif

                assign imageWidth = section.settings.image_width | times: 1
                if imageWidth >= 50
                  assign loading = section.settings.lazyload_images
                else
                  assign loading = true
                endif
              -%}
              {%- render 'image-element',
                img: section.settings.image_mo,
                widths: '180, 360, 540, 750, 900, 1080',
                loading: loading,
                sizeVariable: sizeVariable,
                fallback: fallback,
                classes: 'feature-row__image',
              -%}
            </div>
          {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}</a>{%- endif -%}
            </div>
          {% endif %}
        
      </div>
    {%- endcapture -%}

    <div class="feature-row">
      {%- if section.settings.layout == 'left' -%}
        {{ image_layout }}
      {%- endif -%}

      <div
        class="feature-row__item feature-row__text feature-row__text--{{ section.settings.layout }} text-{{ section.settings.align_text }}"
        data-aos
      >
        {%- if section.settings.subtitle != blank -%}
          <div class="subheading appear-delay{% cycle '','-1','-2','-3','-4' %}">{{ section.settings.subtitle }}</div>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h2 class="h1 appear-delay{% cycle '','-1','-2','-3','-4' %}">{{ section.settings.title | escape }}</h2>
        {%- endif -%}
        {%- if section.blocks.size > 0 -%}
          <div class="rte appear-delay{% cycle '','-1','-2','-3','-4' %}">
            {% for block in section.blocks %}
              <div class="new-box">
                <div class="new-image">
                  <img loading="lazy" src="{{ block.settings.image | img_url: 'large' }}" alt="">
                </div>
                <div class="new-text">
                  <h3>{{ block.settings.header }}</h3>
                  <p>{{ block.settings.text }}</p>
                </div>
              </div>
            {% endfor %}
          </div>
        {%- endif -%}
        {%- if section.settings.button_label != blank -%}
          <div class="appear-delay{% cycle '','-1','-2','-3','-4' %}">
            <a
              href="{{ section.settings.button_link }}"
              class="btn{% if section.settings.button_style == 'secondary' %} btn--tertiary{% endif %}"
            >
              {{ section.settings.button_label }}
            </a>
          </div>
        {%- endif -%}
      </div>

      {%- if section.settings.layout == 'right' -%}
        {{ image_layout }}
      {%- endif -%}
    </div>
  </div>
</div>

{%- if section.settings.divider -%}</div>{%- endif -%}

