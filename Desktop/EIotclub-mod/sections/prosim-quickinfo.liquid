{% liquid
  assign secid = section.id | split:"__" 
  assign secidlast = secid[1] | replace: "-","_"
%}

  <div class="simquick-box swpbtnbox">
    <div class="contain-index">
    {% if section.settings.title != blank %}
        <div class="simquick-toptitle animate-ele">{{ section.settings.title }}</div> 
    {% endif %}
      <div class="simquick-content animate-ele">
     <div class="simquick-conitem">
         <div class="swiper-button-prev swpallbtn simquickprev-{{ secidlast }}"><svg width="50" viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
<circle cx="25" cy="25" r="24" stroke="currentColor" stroke-width="2"/>
<path d="M26.2939 19.2939L20.2939 25.2939L26.2939 31.2939" stroke="currentColor" stroke-width="2"/>
</svg>
</div>
       <div class="swiper-button-next swpallbtn simquicknext-{{ secidlast }}"><svg width="50" viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
<circle cx="25" cy="25" r="24" transform="matrix(-1 0 0 1 50 0)" stroke="currentColor" stroke-width="2"/>
<path d="M23.7061 19.2939L29.7061 25.2939L23.7061 31.2939" stroke="currentColor" stroke-width="2"/>
</svg>
</div>
     <div class="simquick-{{ secidlast }} swiper">
<div class="swiper-scrollbar hide-pc swiper-scrollbar-{{ secidlast }}"></div>
    <div class="swiper-wrapper">  
      {% for block in section.blocks %} 
      <div class="swiper-slide">
       <div class="simquick-proitem simquick-proitem-{{ block.settings.text_position }}">
        {% if block.settings.image  %}
         <div class="simquick-img"><img class="{% if block.settings.imagemb  %}hide-mb{% endif %}"  src="{{ block.settings.image | img_url:'master' }}" alt=" " /></div>
     {% endif %}
    {% if block.settings.imagemb  %}
     <div class="simquick-img"><img class="hide-pc"  src="{{ block.settings.imagemb | img_url:'master' }}"  alt=" " /></div>
   {% endif %}
    {% if block.settings.title != blank %}
    <div class="simquick-title" style="color:{{ block.settings.color }}">{{ block.settings.title }}</div>
   {% endif %}
       </div>
      </div>
         {% endfor %}
    </div>
  </div>
  
     </div>
        <script>   
  $(function(){
      var simquick_{{secidlast}} = new Swiper ('.simquick-{{ secidlast }}', {
    slidesPerView : 3,
    spaceBetween: '3%',
    observer: true,  //开启动态检查器，监测swiper和slide
    observeParents: true, 
    navigation: {
		nextEl: '.simquicknext-{{ secidlast }}',
		prevEl: '.simquickprev-{{ secidlast }}',
	},
     scrollbar: {
      el: '.swiper-scrollbar-{{ secidlast }}',dragSize:89
    }
    ,
    breakpoints: { 
      10: {  
       slidesPerView : 1.5,
         spaceBetween: '2.5%',
      },
      550: { 
       slidesPerView : 2,
      },
      769: {  //当屏幕宽度大于等于769
        slidesPerView: 3,
      },
      994: { 
        slidesPerView : 3,
      }
    }

  });
  })

</script>

  </div>
  </div>
  </div>





{% schema %}
{
  "name": "Quick Info",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title"
    }
  ],
      "blocks": [
      {
        "type": "block",
        "name": "block",
        "settings": [
       {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },{
        "type": "image_picker",
        "id": "imagemb",
        "label": "Image(mobile)"
      },{
        "type": "text",
        "id": "title",
        "label": "title"
      },{
        "type": "color",
        "id": "color",
        "label": "color",
        "default": "#282828"
      },{
        "type": "select",
        "id": "text_position",
        "label": "text position",
        "options": [
          {
            "value": "top",
            "label": "top"
          },
          {
            "value": "center",
            "label": "center"
          },
          {
            "value": "bottom",
            "label": "bottom"
          }
        ]
      }
        ]
      }
    ],
    "presets": [
      {
        "name": "Quick Info",
        "category": "HO-layout"
      }
    ]
}
{% endschema %}