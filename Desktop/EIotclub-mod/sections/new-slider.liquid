    #new-slider-{{ section.id }}{
        max-width: {{ section.settings.max_width | append: 'px'  }};
        margin: {{ section.settings.margin_top | append: 'px'  }} auto {{ section.settings.margin_bottom | append: 'px'  }};
        color: {{ section.settings.bg_color }};
        padding-top:{{ section.settings.padding_top | append: 'px'  }};
        padding-bottom:{{ section.settings.padding_bottom | append: 'px'  }};
        
    }
    #new-slider-{{ section.id }}>div{
        position: relative;
    }
    #new-slider-{{ section.id }} h2.new-slider-header{
        position: absolute;
        font-size: {{ section.settings.header_size | append: 'px' }} ;
        font-weight: {{ section.settings.header_font_weight }};
        line-height: {{ section.settings.header_line_height | append: 'px'  }};
        letter-spacing: {{ section.settings.header_letter_spacing | append: 'px' }};
        color: {{ section.settings.header_color }};   
        top:30px;
        left: calc(( 100vw - 1220px ) / 2);
        transform: translateY(-50%);
    }
    #new-slider-{{ section.id }}  .new-Swiper1{
        padding-top: 70px;
        padding-left: calc(( 100vw - 1700px ) / 2);
        padding-right: calc(( 100vw - 1700px ) / 2);
    }
    #new-slider-{{ section.id }} .new-slider-box{
        position: relative;
        border-radius: 20px;
        overflow: hidden;
    }
    #new-slider-{{ section.id }} .new-slider-textbox{
        position: absolute;
        top: 0;
        left: 0;
    }
    #new-slider-{{ section.id }} .new-slider-box img{
        width: 100%;
    }
    #new-slider-{{ section.id }} .new-slider-textbox{
        padding: 30px;
    }
    #new-slider-{{ section.id }} .new-slider-textbox>*{
        margin: 0;
    }
    #new-slider-{{ section.id }} .right-top{
        top: 0;
        right: 0;
        text-align: right;
    }
    #new-slider-{{ section.id }} .left-top{
        top: 0;
        left: 0;
        text-align: left;
    }
    #new-slider-{{ section.id }} .right-bottom{
        bottom: 0;
        right: 0;
        text-align: right;
    }
    #new-slider-{{ section.id }} .text-center{
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        text-align: center;
    }
    #new-slider-{{ section.id }} .left-bottom{
        bottom: 0;
        left: 0;
        text-align: left;
    }
    #new-slider-{{ section.id }} .swiper-button-next,#new-slider-{{ section.id }}  .swiper-button-prev{
        width: 40px;
        height: 40px;
        top: 30px;
        right: calc(( 100vw - 1220px ) / 2);
    }
    #new-slider-{{ section.id }}  .swiper-button-prev{
        left: auto;
        right: calc((( 100vw - 1220px ) / 2) + 50px);
    }
    #new-slider-{{ section.id }}  .new-slider-list>*{
        {% comment %} transform: translateX(calc(( 100vw - 1220px ) / 2)); {% endcomment %}
    }
    @media(max-width:1220px){
        #new-slider-{{ section.id }} .swiper-button-next,#new-slider-{{ section.id }}  .swiper-button-prev{
        right: 40px;
    }
    #new-slider-{{ section.id }}  .swiper-button-prev{
        left: auto;
        right: calc(40px + 50px);
    }
    #new-slider-{{ section.id }} h2.new-slider-header{
        left:40px;
    }
    #new-slider-{{ section.id }}  .new-Swiper1{
        padding-top: 70px;
        padding-left: 40px;
        padding-right: 40px;
    }
    }
    @media(max-width:767px){
        #new-slider-{{ section.id }}{
            margin: {{ section.settings.margin_top_mo | append: 'px'  }} auto {{ section.settings.margin_bottom_mo | append: 'px'  }};
            padding-top:{{ section.settings.padding_top_mo | append: 'px'  }};
            padding-bottom:{{ section.settings.padding_bottom_mo | append: 'px'  }};
        }
        #new-slider-{{ section.id }} h2.new-slider-header{
            font-size: {{ section.settings.header_size_mo | append: 'px' }} ;
            font-weight: {{ section.settings.header_font_weight_mo }};
            line-height: {{ section.settings.header_line_height_mo | append: 'px'  }};
            letter-spacing: {{ section.settings.header_letter_spacing_mo | append: 'px' }}; 
        }
        #new-slider-{{ section.id }} .new-slider-box{
            border-radius: 12px;
        }
        #new-slider-{{ section.id }} .swiper-button-next,#new-slider-{{ section.id }}  .swiper-button-prev{
            right: 20px;
        }
        #new-slider-{{ section.id }}  .swiper-button-prev{
            left: auto;
            right: calc(20px + 50px);
        }
        #new-slider-{{ section.id }} h2.new-slider-header{
            left:20px;
        }
        #new-slider-{{ section.id }}  .new-Swiper1{
        padding-top: 70px;
        padding-left: 20px;
        padding-right: 20px;
    }
    }
</style>
<div class="new-slider" id="new-slider-{{ section.id }}">
    <div class="">
        {% if section.settings.header != blank %}
            <div class="new-silder-top">
                <h2 class="new-slider-header">{{ section.settings.header }}</h2>
            </div>
        {% endif %}   
        <div  class="swiper new-Swiper1">
            <div class="new-slider-list swiper-wrapper">
                {% for block in section.blocks %}
                    {% if block.settings.image != blank %}
                        <div class="new-slider-box swiper-slide" id="new-slider-{{ block.id }}">
                            <a href="{{ block.settings.image_url }}">
                                <div class="new-slider-textbox {{ block.settings.text_align }}">
                                    {% if block.settings.subheading != blank %}
                                        <p class="new-slider-subheading">{{ block.settings.subheading }}</p>
                                    {% endif %}
                                    {% if block.settings.header != blank %}
                                        <h3 class="new-slider-header">{{ block.settings.header }}</h3>
                                    {% endif %}                               
                                </div>
                                <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.header }}">
                            </a>
                        </div>
                    {% endif %}             
                {% endfor %}
            </div>
            <div class="swiper-button-prev">
                <svg width="43" height="43" viewBox="0 0 43 43" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="21.5" cy="21.5" r="20.5" fill="white" stroke="#DDDDDD"/>
                <path d="M23.7588 16L18.5172 21.2416L23.7588 26.4832" stroke="#666666" stroke-width="1.5"/>
                </svg>       
            </div>
            <div class="swiper-button-next">  
                <svg width="43" height="43" viewBox="0 0 43 43" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="21.5" cy="21.5" r="20.5" transform="rotate(-180 21.5 21.5)" fill="white" stroke="#DDDDDD"/>
                <path d="M19.2412 27L24.4828 21.7584L19.2412 16.5168" stroke="#666666" stroke-width="1.5"/>
                </svg>    
            </div>
        </div>
       
    </div>
</div>
{% for block in section.blocks %}
