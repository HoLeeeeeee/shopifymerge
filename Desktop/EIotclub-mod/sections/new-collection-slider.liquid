        padding-bottom:{{ section.settings.padding_bottom | append: 'px'  }};
        
    }
    #new-slider-{{ section.id }}>div{
        position: relative;
    }
    #new-slider-{{ section.id }} h2.new-slider-header{
        position: absolute;
        font-size: {{ section.settings.header_size | append: 'px' }} ;
        font-weight: {{ section.settings.header_font_weight }};
        line-height: {{ section.settings.header_line_height | append: 'px'  }};
        letter-spacing: {{ section.settings.header_letter_spacing | append: 'px' }};
        color: {{ section.settings.header_color }};   
        top:30px;
        left: calc(( 100vw - 1220px ) / 2);
        transform: translateY(-50%);
    }
    #new-slider-{{ section.id }}  .new-Swiper4{
        padding-top: 70px;
        padding-left: calc(( 100vw - 1700px ) / 2);
        padding-right: calc(( 100vw - 1700px ) / 2);
    }
    #new-slider-{{ section.id }} .new-slider-box{
        position: relative;
        border-radius: 20px;
        display: flex;
        overflow: hidden;
    }
    #new-slider-{{ section.id }} .new-slider-textbox{
        width: 100%;
        position: absolute;
        bottom: 0;
        left: 0;
    }
    #new-slider-{{ section.id }} .new-slider-box img{
        width: 100%;
    }
    #new-slider-{{ section.id }} .new-slider-textbox{
        padding: 30px;
    }
    #new-slider-{{ section.id }} .new-slider-textbox>*{
        margin: 0;
    }
    #new-slider-{{ section.id }} .right-top{
        top: 0;
        right: 0;
        text-align: right;
    }
    #new-slider-{{ section.id }} .left-top{
        top: 0;
        left: 0;
        text-align: left;
    }
    #new-slider-{{ section.id }} .right-bottom{
        bottom: 0;
        right: 0;
        text-align: right;
    }
    #new-slider-{{ section.id }} .text-center{
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        text-align: center;
    }
    #new-slider-{{ section.id }} .left-bottom{
        bottom: 0;
        left: 0;
        text-align: left;
    }
    #new-slider-{{ section.id }} .swiper-button-next,#new-slider-{{ section.id }}  .swiper-button-prev{
        width: 40px;
        height: 40px;
        top: 30px;
        right: calc(( 100vw - 1220px ) / 2);
    }
    #new-slider-{{ section.id }}  .swiper-button-prev{
        left: auto;
        right: calc((( 100vw - 1220px ) / 2) + 50px);
    }
    #new-slider-{{ section.id }}  .new-slider-list>*{
        {% comment %} transform: translateX(calc(( 100vw - 1220px ) / 2)); {% endcomment %}
    }
