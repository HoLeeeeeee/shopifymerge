<div class="new-slider" id="new-slider-{{ section.id }}">
    <div class="">
        {% if section.settings.header != blank %}
            <div class="new-silder-top">
                <h2 class="new-slider-header">{{ section.settings.header }}</h2>
            </div>
        {% endif %}   
        <div  class="swiper new-Swiper4">
            <div class="new-slider-list swiper-wrapper">
                {% for block in section.blocks %}
                    {% if block.settings.collection_header != blank or block.settings.collection_description != blank or block.settings.collection_image != blank %}
                        <div class="new-slider-box swiper-slide" id="new-slider-{{ block.id }}">
                           <img class="show-pc" loading="lazy" src="{{ block.settings.collection_image | img_url: 'master' }}" alt="{{ block.settings.collection_heade | default:'product_img' }}">
                           <img class="show-mobile" loading="lazy" src="{% if block.settings.collection_image_mobile != blank %} {{ block.settings.collection_image_mobile | img_url: 'master' }} {% else %}{{ block.settings.collection_image | img_url: 'master' }} {% endif %}" alt="{{ block.settings.collection_heade | default:'product_img' }}">
                           <div class="new-slider-textbox {{ block.settings.text_align }}">
                               {% if block.settings.collection_header != blank %}
                                    <h3 class="new-slider-header">{{ block.settings.collection_header }}</h3>           
                               {% endif %}
                               {% if  block.settings.collection_description != blank %}
                                    <p class="new-slider-subheading">{{ block.settings.collection_description }}</p>       
                               {% endif %}
                               {% if block.settings.collection_url != blank or block.settings.collection_button != blank %}
                                    <a class="btn" href="{{ block.settings.collection_url }}"> {{ block.settings.collection_button }} </a>            
                               {% endif %}
                           </div>
                        </div>
                    {% endif %}             
                {% endfor %}
            </div>
            <div class="swiper-button-prev">
                <svg width="43" height="43" viewBox="0 0 43 43" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="21.5" cy="21.5" r="20.5" fill="white" stroke="#DDDDDD"/>
                <path d="M23.7588 16L18.5172 21.2416L23.7588 26.4832" stroke="#666666" stroke-width="1.5"/>
                </svg>       
            </div>
            <div class="swiper-button-next">  
                <svg width="43" height="43" viewBox="0 0 43 43" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="21.5" cy="21.5" r="20.5" transform="rotate(-180 21.5 21.5)" fill="white" stroke="#DDDDDD"/>
                <path d="M19.2412 27L24.4828 21.7584L19.2412 16.5168" stroke="#666666" stroke-width="1.5"/>
                </svg>    
            </div>
        </div>
       
    </div>
</div>
